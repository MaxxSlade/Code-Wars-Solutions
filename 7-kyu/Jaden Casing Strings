def to_jaden_case(string):
    cap = [x.lower() for x in string.split()]
    return ' '.join([i.upper()[0] + i[1:] for i in cap])
----------------------------------------------------------------

def to_jaden_case(string):
    return ' '.join([i.upper()[0] + i[1:] for i in [x.lower() for x in string.split()]])

