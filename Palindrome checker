def is_palindrome(s):
    reversed = s[::-1]
    if reversed.lower() == s.lower():
        return True
    else:
        return False
--------------------------------------------------------------
# https://www.codewars.com/kata/57a1fd2ce298a731b20006a4/python

def is_palindrome(s):
    return True if s[::-1].lower() == s.lower() else False

---------------------------------------------------------------

def is_palindrome(s):
    return s[::-1].lower() == s.lower()
