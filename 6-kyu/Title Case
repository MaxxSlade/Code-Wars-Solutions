def title_case(title, minor_words=''):
    titl = [x.title() for x in title.split()]
    for i in titl:
        if i.lower() in minor_words.lower().split():
            titl[titl.index(i)] = i.lower()
    res = ' '.join(titl)
    return res[:1].upper() + res[1:]

