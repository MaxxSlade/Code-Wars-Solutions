def sum_two_smallest_numbers(numbers):
    numbers.sort()
    return numbers[0] + numbers[1]
-----------------------------------------

def sum_two_smallest_numbers(numbers):
    return sum(sorted(numbers)[:2])


# includes two solutions split by the hyphons -- both sort numbers the same but the 1st one use .sort() instead of sorted()
